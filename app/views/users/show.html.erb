<% provide(:title,@user.name)%>
<div class="col-md-4">
	<aside class='span'>
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name%>
			</h1>
		</section>
	</aside>
</div>
<div class="col-md-8">
	<% if @user.microposts.any?%>
	<h3>Microposts:<%= @user.microposts.count %></h3>
	<ul class="list-group">

		<%= render @microposts %>
	</ul>
	<%= will_paginate @microposts%>
	<%end%>
</div>